<div class="header">
    <h1>Hack the Planet</h1>
</div>
<div class="container">
    <button id="scrape-button">Scrape Articles!</button>
    <button id="delete-all-button">Remove Articles</button>
    <div class="articles">
        {{#each article}}
        <div class="article-data">
            <p>Rank: {{rank}}</p>
            <p>Title: {{title}}</p>
            <p>Link: {{url}}</p>
            <p>Points: {{points}}</p>
            <p>Username: {{username}}</p>
            <p>Comments: {{comments}}</p>
            <button id="edit-button" data-id="{{_id}}">Add Note</button>
            <button id="delete-button" data-id="{{_id}}">Remove Article</button>
        </div>
        {{/each}}

    </div>
</div>